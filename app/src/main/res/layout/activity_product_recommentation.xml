<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="fyp.hkust.facet.activity.ProductRecommentationActivity">

    <LinearLayout
        android:id="@+id/activity_product_recommendation_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/recommendation_text_background"
            android:padding="10dp">

            <ImageView
                android:id="@+id/foundation_title_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/foundation"
                android:backgroundTint="@color/colorPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/foundation_title_image"
                android:background="@color/recommendation_text_background"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:text="@string/foundation_text"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recommend_product_list_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/recommendation_text_background"
            android:padding="10dp">

            <ImageView
                android:id="@+id/brush_title_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blush"
                android:backgroundTint="@color/colorPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/brush_title_image"
                android:background="@color/recommendation_text_background"
                android:text="@string/brush_text"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recommend_product_list_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/recommendation_text_background"
            android:padding="10dp">

            <ImageView
                android:id="@+id/eyeshadow_title_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blush"
                android:backgroundTint="@color/colorPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/eyeshadow_title_image"
                android:background="@color/recommendation_text_background"
                android:text="@string/eye_text"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recommend_product_list_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/recommendation_text_background"
            android:padding="10dp">

            <ImageView
                android:id="@+id/lipstick_title_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/lipstick"
                android:backgroundTint="@color/colorPrimary"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/lipstick_title_image"
                android:background="@color/recommendation_text_background"
                android:text="@string/lip_text"
                android:textColor="@color/colorPrimary"
                android:textSize="18dp"/>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recommend_product_list_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>