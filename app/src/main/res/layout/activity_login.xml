<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_dark"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    tools:context="fyp.hkust.facet.activity.LoginActivity">

    <Button
        android:id="@+id/goregister_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#00000000"
        android:text="@string/no_account_text"
        android:textColor="#fff"
        android:textSize="@dimen/small_text_size" />

    <Button
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/loginpasswordfield"
        android:layout_marginTop="20dp"
        android:background="@color/greenishBlue"
        android:text="@string/login_text"
        android:textColor="#fff"
        android:textSize="@dimen/small_text_size" />

    <CheckBox
        android:id="@+id/remember_pw_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remember_password_field"
        android:textSize="16dp"
        android:layout_below="@+id/login_btn"
        android:textColor="#fff"
        android:buttonTint="@color/white"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:checked="true"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/loginemailfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/facebook_login_btn"
        android:layout_marginTop="34dp"
        android:drawableLeft="@mipmap/ic_email_white_24dp"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:hint="@string/email_hint"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textSize="@dimen/small_text_size"
        app:met_autoValidate="true"
        app:met_baseColor="#fff"
        app:met_hideUnderline="true"
        app:met_primaryColor="#fff"
        app:met_textColorHint="#fff"
        app:met_underlineColor="#fff" />


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/loginpasswordfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/loginemailfield"
        android:layout_marginRight="36dp"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:drawableLeft="@mipmap/ic_vpn_key_white_24dp"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:hint="@string/password_hint"
        android:inputType="textPassword"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:textSize="@dimen/small_text_size"
        app:met_autoValidate="true"
        app:met_baseColor="#fff"
        app:met_hideUnderline="true"
        app:met_primaryColor="#fff"
        app:met_textColorHint="#fff"
        app:met_underlineColor="#fff" />

    <ImageButton
        android:id="@+id/passwordfield_visible_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_btn"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="10dp"
        android:background="#00000000"
        android:src="@mipmap/ic_visibility_off_white_24dp" />

    <ImageView
        android:id="@+id/loginpwbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/login_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/loginpasswordfield"
        android:background="@color/transparentBlack" />

    <ImageView
        android:id="@+id/loginemailbg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/loginpasswordfield"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/loginemailfield"
        android:background="@color/transparentBlack" />


    <!-- start or-divider -->

    <TextView
        android:id="@+id/orText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/facebook_login_btn"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="5dp"
        android:text="@string/or_text"
        android:textColor="#FFFFFF"
        android:textSize="@dimen/small_text_size" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/facebook_login_btn"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@id/orText"
        android:background="#fff" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/facebook_login_btn"
        android:layout_centerVertical="true"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/orText"
        android:background="#fff" />

    <!--end of divider-->

    <Button
        android:id="@+id/facebook_login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/signingooglebtn"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:background="@color/facebookBlue"
        android:drawableLeft="@drawable/ic_facebook_logo"
        android:drawableTint="#ffffff"
        android:gravity="center"
        android:paddingLeft="30dip"
        android:paddingRight="30dp"
        android:text="@string/login_with_facebook"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="@dimen/small_text_size"
        tools:ignore="RtlSymmetry" />

    <!--logo-->

    <!--<ImageView-->
    <!--android:id="@+id/logo"-->
    <!--android:layout_width="100dp"-->
    <!--android:layout_height="100dp"-->
    <!--android:src="@mipmap/app_icon"-->
    <!--android:layout_gravity="center_horizontal"-->
    <!--android:layout_marginTop="90dp"-->
    <!--android:layout_marginBottom="40dp"-->
    <!--android:layout_marginLeft="70dp"-->
    <!--android:layout_marginRight="70dp"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_centerHorizontal="true" />-->

    <Button
        android:id="@+id/signingooglebtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="84dp"
        android:background="@color/googleRed"
        android:drawableLeft="@drawable/ic_google_glass_logo"
        android:drawablePadding="20dip"
        android:drawableTint="#ffffff"
        android:gravity="center"
        android:paddingLeft="30dip"
        android:paddingRight="65dp"
        android:text="@string/login_with_google"
        android:textAlignment="center"
        android:textColor="#fff"
        android:textSize="@dimen/small_text_size" />


</RelativeLayout>
