<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_horizontal_margin"
    android:background="@drawable/background_dark"
    tools:context="fyp.hkust.facet.activity.LoginActivity"

    >

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/goregister_btn"
        android:text="@string/no_account_text"
        android:background="#00000000"
        android:textColor="#fff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/small_text_size" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/login_btn"
        android:text="@string/login_text"
        android:background="@color/greenishBlue"
        android:textColor="#fff"
        android:layout_below="@+id/loginpasswordfield"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:textSize="@dimen/small_text_size"
        />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/loginpasswordfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/password_hint"
        app:met_hideUnderline="true"
        app:met_autoValidate="true"
        app:met_underlineColor="#fff"
        app:met_baseColor="#fff"
        app:met_textColorHint="#fff"
        app:met_primaryColor="#fff"
        android:singleLine="true"
        android:inputType="textPassword"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        android:paddingTop="5dp"
        android:drawableLeft="@mipmap/ic_vpn_key_white_24dp"
        android:layout_below="@+id/loginemailfield"
        android:layout_marginRight="36dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textSize="@dimen/small_text_size"
        />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/passwordfield_visible_button"
        android:background="#00000000"
        android:src="@mipmap/ic_visibility_off_white_24dp"
        android:layout_above="@+id/login_btn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/transparentBlack"
        android:id="@+id/loginpwbg"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/login_btn"
        android:layout_alignTop="@+id/loginpasswordfield" />

    <ImageView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@color/transparentBlack"
        android:id="@+id/loginemailbg"
        android:layout_alignTop="@+id/loginemailfield"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/loginpasswordfield" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/loginemailfield"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/email_hint"
        android:drawableLeft="@mipmap/ic_email_white_24dp"
        android:drawablePadding="@dimen/activity_horizontal_margin"
        app:met_hideUnderline="true"
        app:met_underlineColor="#fff"
        app:met_baseColor="#fff"
        app:met_textColorHint="#fff"
        app:met_primaryColor="#fff"
        app:met_autoValidate="true"
        android:paddingTop="5dp"
        android:singleLine="true"
        android:layout_marginTop="34dp"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/facebook_login_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/small_text_size" />

    <!-- start or-divider -->

    <TextView
        android:id="@+id/orText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:textSize="@dimen/small_text_size"
        android:layout_marginTop="5dp"
        android:text="@string/or_text"
        android:layout_below="@id/facebook_login_btn"
        android:textColor="#FFFFFF"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_toLeftOf="@id/orText"
        android:layout_below="@id/facebook_login_btn"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="#fff"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_toRightOf="@id/orText"
        android:layout_below="@id/facebook_login_btn"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_marginBottom="@dimen/activity_horizontal_margin"
        android:background="#fff"
        />

    <!--end of divider-->

    <Button
        android:drawableLeft="@drawable/ic_facebook_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:id="@+id/facebook_login_btn"
        android:background="@color/facebookBlue"
        android:textColor="#fff"
        android:text="@string/login_with_facebook"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:paddingLeft="30dip"
        android:paddingRight="30dp"
        android:gravity="center"
        android:layout_below="@+id/signingooglebtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/small_text_size"
        tools:ignore="RtlSymmetry"
        android:drawableTint="#ffffff"/>

    <Button
        android:drawableLeft="@drawable/ic_google_glass_logo"
        android:drawablePadding="20dip"
        android:paddingLeft="30dip"
        android:layout_height="wrap_content"
        android:text="@string/login_with_google"
        android:textColor="#fff"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:id="@+id/signingooglebtn"
        android:layout_marginTop="84dp"
        android:paddingRight="65dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="@dimen/small_text_size"
        android:background="@color/googleRed"
        android:gravity="center"
        android:drawableTint="#ffffff"
    />


</RelativeLayout>
